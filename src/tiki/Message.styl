@import "variables"
@import "mixins"

#ns
  border-radius $btn-border-radius
  background-color $message-default-bg
  color $message-default-color
  border-color $message-default-border
  padding-left $message-padding-x
  padding-right $message-padding-x
  padding-top $message-padding-y
  padding-bottom $message-padding-y
  margin-bottom $message-margin

  .close
    position relative
    top -0.6rem
    right -.75rem
    color #fff

    padding 0
    cursor pointer
    background transparent
    border transparent
    -webkit-appearance none

    float right
    font-size 1.75rem
    font-weight 700
    line-height 1
    text-shadow 0 0 1px #000
    opacity .8
    box-shadow none

    &:not([disabled])
      &:active
      &:hover
      &:focus
        background-color transparent
        border-color transparent
        opacity 1
        box-shadow none
