button-variant($text, $bg, $border)
  background-color $bg
  border-color $border
  color $text

  &:not([disabled])
    &:hover
    &:focus
      background-color darken($bg, 10%)
      border-color darken($border, 10%)

    &:focus
      box-shadow 0 0 0 3px rgba($border, 25%)

    &:active
    &.active
      border-color darken($border, 10%)
      // needed here in the mixin, otherwise :focus has more specificity
      box-shadow $btn-active-box-shadow

button-variant-hollow($accent)
  background-color transparent
  border-color $accent
  color darken($accent, 40%)

  &:hover
  &:focus
    border-color $accent
    background-color lighten($accent, 80%)
